@import url("//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css")

$gray = #B9C3CC
$white = #F9FFFF
$black = #242323
$red = #CC2920

.red
  color $red
.gray
  color $gray
.black
  color $black
.white
  color $white

.text-justify
  text-align justify

reset-html5()

*
  text-decoration none
  font-family "Helvetica Neue", "Helvetica", sans-serif
  color $black
  letter-spacing 5px

html, body
  width 100%
  height 100%
  //background-color $mainColor
body
  //background url('../images/bg.png')
  background $white

.auto-margin
  margin 0 auto
  float none
  padding-left 50px
a
  color $red
  font-weight 300
a:hover
  text-decoration none
  cursor pointer
  color $black
  font-weight 900
  h4
    color $white
  p
    color $red

h1,h2,h3,h4,h5
  color $gray
  font-weight 200

h2
  font-size 60px
  font-weight 400

.strong
  font-weight 500

strong
  font-weight 300

i
  font-style italic

p
  font-weight 300
  letter-spacing 4px

@media screen and (-webkit-min-device-pixel-ratio: 2)
  p
    font-weight 100

hr
  color $red
  border-color $red

hr.dotted
  border-style dashed
  border-spacing 10px 50px

hr.white
  color $white
  border-color $white

.skinny
  letter-spacing 1px
.tiny
  font-size 11px

.link
  text-align center
  margin 0px auto
  width 100px
  height 100px
  display block
  float none
  position relative
  padding 0
  img
    padding 0
    margin 0
    top 0px
    left 0px
    position absolute
    transition opacity .5s
    opacity 1
    width 100px
  img.hover
    opacity 0
.link:hover
  img.hover
    opacity 1
  img:not(.hover)
    opacity 0

div.navbar.nav
  .navbar-toggle
    border-color $white
    float none
    margin 30px auto
    width 60px
    height 60px
    .icon-bar
      background-color $red
      width 40px
  .navbar-toggle:hover
    background $white
  button.navbar-toggle:focus
    outline-color $red
    border 0px
  height auto
  //background linear-gradient(top, $mainColor, $gradMid, $mainColor)
  background $gray
  //background linear-gradient(top, $gradMid, $mainColor, $gradMid)
  text-align center
  width 100%
  max-width 100%
  min-height 20px
  border-radius 0px
  margin 0px
  box-shadow 0px -10px 15px rgba(0,0,0,0.1)
  ul.nav
    float none
    margin 30px auto 0px auto
  .nav-link
    position relative
    left 0px
    top 0px
    display inline-block
    color $gray
    border-right 1px solid $white
    padding 15px 50px
    a
      font-size 23px
      font-weight 200
  .nav-link:last-child
    border-right none
  .nav-link.home-link
    border-right 3px solid $white
    img
      height 100px

@media screen and (max-width: 940px) and (min-width: 841px)
  div.navbar.nav
    .nav-link
      padding 15px 40px
@media screen and (max-width: 840px) and (min-width: 767px)
  div.navbar.nav
    .nav-link
      padding 15px 30px
@media screen and (max-width: 767px)
  div.navbar.nav
    ul.nav
      margin 0px auto
      .nav-link
        clear both
        display block
        width 60%
        border-right none
        border-bottom 1px solid $white
        margin 0 auto
      .nav-link:last-child
        border-bottom none

$heightTrans = height .5s
#clockblock-block
  width 400px
  height 505px
  h4
    position absolute
    top 5px
    margin-left 15px
    color $black!important
  #clockblock
    position absolute
  .time
    width 130px
    margin 10px auto
    float left
    display inline-block
    .unit
      width 70px
      margin-right 20px
      display inline-block
    .measure
      width 40px
      display inline-block
  .modes
    display inline-block
    width 65px
    margin 10px auto
    text-align left
    float right
  .h30
    height 30px
    p
      display inline-block
  .radio
    display inline-block
    margin 0px
    margin-right 10px
    width 20px
    height 20px
    border 1px solid $red
    background $white
    border-radius 5px
    transition background 1s
  .radio.checked
    background $gray
    
@media screen and (max-width: 940px)
  #clockblock-block, #blurb
    display block
    float none!important
    margin 0 auto
    margin-bottom 40px

#main
  margin 70px auto 0px auto
  max-width 950px
  #blurb
    width 430px
    p
      line-height 46px
  h2
    border-bottom 2px solid $black
    border-top 2px solid $black
    margin 0px auto 17px auto
    width 400px
    height 75px
  h2, h2 span
    letter-spacing 12px
  .text-justify
    width 400px
    padding 0px
    margin 0 auto
    float none
#equation
  display block
  > div > div
    position absolute
    top 0px
    left 0px
    right 0px
    bottom 0px
    table
      width 100%
      height 100%
      text-align center
      vertical-align middle
  .cypress
    margin-left 40px
  h4
    text-align center
    vertical-align middle
    width 100%
    font-weight 100
    font-size 40px
  img
    display table-cell
    width 100%
    height auto
    border-radius 15px
    vertical-align middle
  .plus
    h4
      font-weight 900
      font-size 40px
      //margin-top 70px
      padding-top 145%
  .tech
    h4
      margin-left 5px
@media screen and (max-width: 760px) and (min-width: 460px)
  #main
    #blurb
      width 367px
      float none!important
      margin 0 auto
      .text-justify
        width 340px
        p
          line-height 36px
    h2
      margin 10px auto
      width 338px
      height 66px
      font-size 48px

@media screen and (max-width: 760px) and (min-width: 461px)
  #clockblock-block
    height 435px
@media screen and (max-width: 460px) and (min-width: 390px)
  #clockblock-block
    height 405px
  #main
    #blurb
      width 349px
      float none!important
      margin 0 auto
      .text-justify
        width 290px
        p
          line-height 27px
    h2
      margin 10px auto
      width 290px
      height 49px
      font-size 38px

@media screen and (max-width: 389px)
  #clockblock-block
    height 350px
  #main
    #blurb
      width 290px
      float none!important
      margin 0 auto
      .text-justify
        width 260px
        p
          line-height 21px
    h2
      margin 10px auto
      width 260px
      height 40px
      font-size 31px
    h2, h2 span
      letter-spacing 12px

@media (max-width: 650px)
  #equation
    > div, > div.cypress
      width 250px
      float none
      margin 0 auto
    .plus
      h4
        padding-top 0px
#buy
  .form-group
    margin 5px 0px
    .input-group-addon
      background rgba(255,255,255,0)
      button.btn.btn-default
        background $gray
        color $white
      button.btn.btn-default:hover
        background $white
        color $gray
    label 
      width 80px
      letter-spacing .05px
      margin-top 20px
    input
      margin-right 20px
      height 50px
      width 220px
      background $white
      color $black
      letter-spacing 1px
      display inline-block
    input.mini
      width 70px
    label.mini
      width 60px
    input:focus
      border none
      box-shadow 0px 0px 2px $red
@media screen and (max-width: 991px)
  #buy
    .form-group
      label.mini
        width 80px

.payment-errors
  color $red
  font-size 30px

#learn
  background $black
  margin-top 40px
  padding-bottom 100px
  *
    color $white

.user-order
  //border 1px solid $red
  padding 15px 10px
  background $gray
  margin-top 10px
  margin-bottom 10px

