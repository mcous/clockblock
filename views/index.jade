                    input.inline.form-control(type='email', required='true', name='email')
                .row
                  .form-group.col-sm-6
                      label.col-md-3.inline phone
                      input.inline.form-control(type='phone', required='true', name='phone')
                  .form-group.col-sm-6
                      label.col-md-3.inline address
                      input.inline.form-control(type='text', data-stripe='address_line1', required='true', name='address')
                .row
                  .form-group.col-sm-6
                      label.col-md-3.inline city
                      input.inline.form-control(type='city', data-stripe='address_city', required='true', name='city')
                  .form-group.col-sm-3
                      label.col-md-4.inline state
                      input.inline.form-control(type='state', required='true', data-stripe='address_state', name='state')
                  .form-group.col-sm-3
                      label.col-md-3.iniine zip
                      input.inline.form-control(type='zip', data-stripe='address_zip', required='true', name='zip')
                .row
