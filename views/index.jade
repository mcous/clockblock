                        img.hidden.img-thumbnail.no-border(src='/images/plank.jpg')
                        img.hidden.img-thumbnail.no-border(src='/images/kit.jpg')
                .row
                  .hidden-xs
                    br
                .row
                  .col-md-4
                    h4.m0.red total: <strong>$</strong><span class='strong total'>-</span>
                    i.skinny.gray.tiny (includes shipping)
                .row
                  .col-sm-6.col-sm-offset-3
                    br
                    button.btn.btn-lg.btn-block(type='submit') Buy one
                .row
                  .col-sm-12
                    .row
                      hr.dotted
                      br
                    .row
                      .col-sm-4.text-left
                        a(href='https://stripe.com/us/help/faq#security', target='_blank')
